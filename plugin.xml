<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        id="cordova-plugin-appaloosa" version="0.1.0">

    <name>Appaloosa</name>
    <description>Cordova Appaloosa Plugin</description>
    <license>The MIT License (MIT)</license>

    <keywords>cordova,appaloosa</keywords>
    <author>SQLI Lab mobilit√© (su.mobility@sqli.com)</author>
    <author>Nicolas Hodicq (nhodicq@sqli.com)</author>

    <repo>https://github.com/appaloosa-store/cordova-appaloosa-plugin</repo>
    <issue>https://github.com/appaloosa-store/cordova-appaloosa-plugin/issues</issue>

    <js-module src="www/Appaloosa.js" name="Appaloosa">
        <clobbers target="Appaloosa"/>"
    </js-module>
	
	
	 <!-- ANDROID PLATFORM -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="Appaloosa_Phonegap">
                <param name="android-package" value="com.Appaloosa.Plugin.Appaloosa_Phonegap"/>
                <param name="onload" value="true" />
            </feature>
        </config-file>

        <!--PERMISSIONS-->
        <config-file target="AndroidManifest.xml" parent="/manifest">
            <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
			<uses-permission android:name="android.permission.INTERNET" />
			<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
			<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
			<uses-permission android:name="android.permission.READ_PHONE_STATE" />
        </config-file>

        <!-- CORDOVA SOURCE FILES -->
        <source-file src="src/android/Appaloosa_Phonegap.java" target-dir="src/com/Appaloosa/Plugin" />
        <source-file src="src/android/ApplicationAuthorization.java" target-dir="src/com/Appaloosa/Plugin" />

        <!-- ADDTIONNAL LIBRAIRIES -->
        <source-file src="libs/android/appaloosa-android-tools-0.3.3.jar" target-dir="libs/" />

    </platform>

